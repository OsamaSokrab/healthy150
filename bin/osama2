#!/bin/bash
name="osama"
age=50
echo "name: $name"
echo "age: $age"
echo "This script name is: $0"
echo -n "Enter the name of an animal: "
read ANIMAL
echo -n "The $ANIMAL has "
case $ANIMAL in
horse| dog| cat) echo -n "four";;
man| kangaro) echo -n "two";;
*) echo -n "an unkown number of";;
esac
echo " legs"

# select
echo  "Select an animal: "
select animal in cat man dog; 
do 
    echo "Selected animal: $animal" 
    echo "Selected number: $REPLY"
 break; 
 done
echo "The total number of arguments is: $$"