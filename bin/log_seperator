#!/bin/bash

              
#: Title       : log_seperator

              
#: Date        : 2023-04-02

              
#: Author      : Osama Ahmed

              
#: Version     : 1.0

              
#: Description : create a seperator function for the log out put

              
#: Options     : None

comment=$1
log_seperator() {
    printf "%s\n"
    printf "%s\n" "============================";
    printf "%s\n" $comment;
    printf "%s\n" "============================";
    printf "%s\n";
}

log_seperator >> bin/log  2>>bin/errorFile
